<%@ taglib prefix="fmt" uri="jakarta.tags.fmt" %>

<h2>Sổ thu chi</h2>

<form method="get" action="${pageContext.request.contextPath}/home">
	Từ ngày: <input type="date" name="from" value="${from}"> Đến
	ngày: <input type="date" name="to" value="${to}">
	<button>Lọc</button>
</form>

<h3>Chi tiêu</h3>
<table border="1" width="100%">
	<tr>
		<th>Ngày</th>
		<th>Danh mục</th>
		<th>Số tiền</th>
		<th>Ghi chú</th>
	</tr>
	<c:forEach var="t" items="${expense}">
		<tr>
			<td>${t.txDay}</td>
			<td>${t.categoryId}</td>
			<td>${t.amount}</td>
			<td>${t.notes}</td>
		</tr>
	</c:forEach>
	<c:if test="${empty expense}">
		<tr>
			<td colspan="4">Chưa có chi tiêu</td>
		</tr>
	</c:if>
</table>

<h3>Thu nhập</h3>
<table border="1" width="100%">
	<tr>
		<th>Ngày</th>
		<th>Danh mục</th>
		<th>Số tiền</th>
		<th>Ghi chú</th>
	</tr>
	<c:forEach var="t" items="${income}">
		<tr>
			<td>${t.txDay}</td>
			<td>${t.categoryId}</td>
			<td>${t.amount}</td>
			<td>${t.notes}</td>
		</tr>
	</c:forEach>
	<c:if test="${empty income}">
		<tr>
			<td colspan="4">Chưa có thu nhập</td>
		</tr>
	</c:if>
</table>
