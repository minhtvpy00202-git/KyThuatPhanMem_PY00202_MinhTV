<%@ page contentType="text/html; charset=UTF-8" %>
<%@ taglib prefix="c" uri="jakarta.tags.core" %>
<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="UTF-8">
  <title>Quản lý danh mục</title>
  <style>
    a.tab { padding:6px 10px; border:1px solid #ccc; border-radius:6px; text-decoration:none; }
    a.active { background:#eee; }
    table { border-collapse:collapse; width:100%; margin-top:10px; }
    th,td { border:1px solid #ddd; padding:6px 8px; }
    form.inline { display:inline; }
  </style>
</head>
<body>
  <p>
    <a class="tab ${type=='EXPENSE'?'active':''}" href="${pageContext.request.contextPath}/categories?type=EXPENSE">Chi tiêu</a>
    <a class="tab ${type=='INCOME'?'active':''}" href="${pageContext.request.contextPath}/categories?type=INCOME">Thu nhập</a>
    &nbsp; | &nbsp; <a href="${pageContext.request.contextPath}/home">Về trang chủ</a>
  </p>

  <h2>Danh mục (${type})</h2>

  <form method="post" action="${pageContext.request.contextPath}/categories">
    <input type="hidden" name="action" value="create">
    <input type="hidden" name="type" value="${type}">
    <input name="name" placeholder="Tên danh mục mới" required>
    <button>Thêm</button>
  </form>

  <table>
    <tr><th>Tên danh mục</th><th>Thuộc</th><th>Hành động</th></tr>
    <c:forEach var="c" items="${items}">
      <tr>
        <td>
          <c:choose>
            <c:when test="${empty c.userId}">
              ${c.name}
            </c:when>
            <c:otherwise>
              <form class="inline" method="post" action="${pageContext.request.contextPath}/categories">
                <input type="hidden" name="action" value="rename">
                <input type="hidden" name="type" value="${type}">
                <input type="hidden" name="id" value="${c.id}">
                <input name="name" value="${c.name}">
                <button>Lưu</button>
              </form>
            </c:otherwise>
          </c:choose>
        </td>
        <td><c:out value="${empty c.userId ? 'Mặc định (dùng chung)' : 'Cá nhân'}"/></td>
        <td>
          <c:if test="${not empty c.userId}">
            <form class="inline" method="post" action="${pageContext.request.contextPath}/categories"
                  onsubmit="return confirm('Xóa danh mục này?');">
              <input type="hidden" name="action" value="delete">
              <input type="hidden" name="type" value="${type}">
              <input type="hidden" name="id" value="${c.id}">
              <button>Xóa</button>
            </form>
          </c:if>
        </td>
      </tr>
    </c:forEach>
  </table>
</body>
</html>
